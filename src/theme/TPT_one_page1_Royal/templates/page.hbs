{{! make the _globals object in course.json available to this template}} {{import_globals}}
<div class="page-inner article-container">
    {{{a11y_aria_label _globals._accessibility._ariaLabels.page}}}
    <div class="page-header">

        <div class="page-header-inner clearfix">

            <div class="page-header-content">

                <div class="page-header-content-inner">
                    <!--    LOGO ADDED TPT                  -->
                    <div class="page-logo"></div>
                    <!--    LOGO ADDED TPT                   -->
                    {{#if displayTitle}}
                    <div class="page-title">

                        <div class="page-title-inner" {{{a11y_attrs_heading "page"}}}>
                            {{{compile displayTitle this}}}
                        </div>
                    </div>
                    {{/if}} {{#if body}}
                    <div class="page-body">
                        <div class="page-body-inner">
                            {{#if pageBody}} {{{compile_a11y_text pageBody this}}} {{else}} {{{compile_a11y_text body this}}} {{/if}}
                        </div>

                    </div>
                    {{/if}} {{#if instruction}}
                    <div class="page-instruction">
                        <div class="page-instruction-inner">
                            {{{compile_a11y_text instruction this}}}
                        </div>
                    </div>
                    {{/if}}

                </div>
            </div>

        </div>
    </div>
<div class="page-shadow"></div>
</div>

<div class="page-footer">
	<div class="left">
		<a href="http://www.transperfect.com" target="_blank">
			<img alt="GLP Logo" class="xl" src="assets/TP_SS_white.png">
		</a>
	</div>

	<div class="right">
		<a href="https://pl.linkedin.com/company/transperfect" target="_blank">
			<img alt="LinkedIn logo" src="assets/linkedin-icon-white.png">
		</a>
		<a href="https://twitter.com/transperfect" target="_blank">
			<img alt="Twitter logo" src="assets/twitter-icon-white.png">
		</a>
		<a href="https://www.youtube.com/channel/UCIll6TFyE6818PGVMTIJZ1A" target="_blank">
			<img alt="YouTube logo" src="assets/youtube-icon-white.png">
		</a>
	</div>
</div>

<div class="aria-label relative a11y-ignore-focus prevent-default" tabindex="0" role="region">{{_globals._accessibility._ariaLabels.pageEnd}}</div>
